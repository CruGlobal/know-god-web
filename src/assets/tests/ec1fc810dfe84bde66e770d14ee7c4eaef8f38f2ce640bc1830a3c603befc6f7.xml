<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="https://mobile-content-api.cru.org/xmlns/tract" xmlns:content="https://mobile-content-api.cru.org/xmlns/content" xmlns:analytics="https://mobile-content-api.cru.org/xmlns/analytics" background-color="rgba(59,164,219,1)">
    <hero>
        <heading>
            <content:text i18n-id="10_phrase1" text-scale="1.4" text-color="rgba(255,255,255,1)">Would you like to talk more?</content:text>
        </heading>
        
        <analytics:events>
            <analytics:event action="emojitool2-9" system="appsflyer"/>
        </analytics:events>
        
        <content:paragraph>
            <content:text i18n-id="10_phrase1b" text-scale="1.4" text-color="rgba(255,255,255,1)">Continue the conversation with one of these tools</content:text>
        </content:paragraph>
        
        <content:paragraph>
            <content:button type="url" url-i18n-id="10_phrase2_link" color="rgba(255,255,255,1)" icon="Vectorexitlink-blue-1.png" icon-gravity="end" url="https://www.everyperson.com/">
                <content:text i18n-id="10_phrase2" text-color="rgba(59,164,219,1)">EveryPerson.com</content:text>
            </content:button>
        </content:paragraph>
        
        <content:paragraph>
            <content:button type="url" url-i18n-id="10_phrase3_link" color="rgba(255,255,255,1)" url="https://knowgod.com/en/thefour/0">
                <content:text i18n-id="10_phrase3" text-color="rgba(59,164,219,1)">The FOUR</content:text>
            </content:button>
        </content:paragraph>
        
        <content:paragraph>
            <content:button type="url" url-i18n-id="10_phrase4_link" color="rgba(255,255,255,1)" url="https://knowgod.com/en/satisfied/0">
                <content:text i18n-id="10_phrase4" text-color="rgba(59,164,219,1)">Satisfied</content:text>
            </content:button>
        </content:paragraph>
        
        
        <!-- Close Button is not working on knowgod.com so it has been restricted to mobile -->
        <content:paragraph restrictTo="mobile">
            <content:button type="event" events="close-emoji2" color="rgba(255,255,255,1)">
                <content:text i18n-id="10_phrase5" text-color="rgba(0,0,0,1)">Close</content:text>
                <analytics:events>
                    <analytics:event action="close_emoji2" system="firebase"/>
                </analytics:events>
            </content:button>
        </content:paragraph>
        
    </hero>
    <call-to-action control-color="rgba(255,255,255,1)">
        <content:text/>
    </call-to-action>
</page>
